<!-- required params (feed) -->
<body>
    <% if(loggedUser) { %>     
        <h1 class="main-title">Welcome, <%= loggedUser.firstName %>!</h1>
        <h2>What's happening?</h2>
        <section class="activity-feed">
            <% if (feed.length === 0) { %>
                <p class="empty-message">No recent activities to show. Start logging runs or joining goals!</p>
            <% } else { %>
                <% feed.forEach(activity => { %>
                    <%- include("partials/activityCard.ejs", { 
                        user: activity.user, 
                        activityType: activity.type, 
                        activityItem: activity.item, 
                        loggedUser: loggedUser, 
                        showUser: true 
                    }) %>
                <% }) %>
            <% } %>
        </section>
    <% } %>
</body>